{
    "services": {
      "product": {
        "url": "http://localhost:4001",
        "routes": [
          {
            "path": "/products",
            "methods": [
              "get"
            ]
          },
          {
            "path": "/products",
            "methods": [
              "post"
            ]
          },
          {
            "path": "/products/:id",
            "methods": [
              "get"
            ]
          }
        ]
      },
      "inventory": {
        "url": "http://localhost:4002",
        "routes": [
          {
            "path": "/inventories/:id",
            "methods": [
              "put"
            ]
          },
          {
            "path": "/inventories/:id/details",
            "methods": [
              "get"
            ]
          }
        ]
      },
      "auth": {
        "url": "http://localhost:4003",
        "routes": [
          {
            "path": "/auth/register",
            "methods": [
              "post"
            ]
          },
          {
            "path": "/auth/login",
            "methods": [
              "post"
            ]
          },
          {
            "path": "/auth/verify-email",
            "methods": [
              "post"
            ]
          },
          {
            "path": "/auth/verify-token",
            "methods": [
              "post"
            ]
          }
        ]
      },
      "user": {
        "url": "http://localhost:4004",
        "routes": [
          {
            "path": "/users/:id",
            "methods": [
              "get"
            ]
          }
        ]
      }
    }
  }